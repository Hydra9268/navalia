{
  "name": "navalia",
  "version": "0.0.16",
  "description": "A browser automation manager with a consistent API",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf build",
    "docs": "cd docs && bundle exec jekyll serve",
    "prepublish": "npm run build",
    "release": "np",
    "start": "ts-node",
    "test": "jest"
  },
  "keywords": [
    "chrome",
    "headless",
    "cluster",
    "queue",
    "navalia"
  ],
  "author": "jgriffith",
  "license": "LGPL-3.0",
  "devDependencies": {
    "@types/debug": "0.0.29",
    "@types/jest": "^20.0.2",
    "@types/lodash": "^4.14.67",
    "@types/node": "^6.0.4",
    "jest": "^20.0.4",
    "nodemon": "^1.11.0",
    "np": "^2.16.0",
    "rimraf": "^2.6.1",
    "typescript": "^2.4.1"
  },
  "dependencies": {
    "chrome-launcher": "^0.3.0",
    "chrome-remote-interface": "^0.24.1",
    "debug": "^2.6.8",
    "lodash": "^4.17.4",
    "ts-node": "^3.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joelgriffith/navalia.git"
  },
  "bugs": "https://github.com/joelgriffith/navalia/issues",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.(ts|tsx|js)"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!chrome-launcher)"
    ]
  }
}
